                {{form_row(form_ram.type_memoire, {'attr' : {'placeholder' : "Type de mémoire"}})}}
                {{form_row(form_ram.frequence_memoire, {'attr' : {'placeholder' : "Frequence mémoire de la RAM"}})}}
